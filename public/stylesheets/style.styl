body
  margin 0
  font 14px Helvetica, Arial, sans-serif

html,
body,
#canvas
  width: 100%
  height 100%
  min-height 100%
  position relative
  overflow hidden

#title
  position absolute

.zombie
  position absolute
  width 30px
  height 30px
  transform translateZ(0)

.zombie:checked
  display none

#message
  position absolute
  text-align center
  width 100%
  top 30%
  display block

.zombie:not(:checked) ~ #message
  display none

zombie-count = 50

getname(n)
  return anim-walk-+n

apply-animation(count)
  for n, x in 0..count
    anim = getname(x)
    input.zombie-{x}
      animation anim 1000s linear 0s infinite normal


random(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)

generate-keyframes(count)
  for k in 0..count
    @keyframes anim-walk-{k}
      for i in 0..100
        percent = unit(i, '%')
        l = unit(random(0, 100), '%')
        t = unit(random(0, 100), '%')
        {percent}
          left: l
          top: t

apply-animation(zombie-count)

generate-keyframes(zombie-count)
